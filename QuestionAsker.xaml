<Window x:Class="WellNet.Utils.QuestionAsker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WellNet.Utils"
        mc:Ignorable="d"
        Title="" Height="300" Width="300"
        FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="TbTitle" Grid.Row="0" TextWrapping="Wrap" FontStyle="Italic" DockPanel.Dock="Top" Text="asdf"/>
        <TextBlock Name="TbQuestion" Grid.Row="1" TextWrapping="Wrap" Margin="6,6,6,6" DockPanel.Dock="Top" VerticalAlignment="Stretch" Text=";'jk as;ldkfja;\r\n\tsdfk  a;sldkjf  ;asdfklj sd;flkj sd;flkjas df;lakjsdf a;lsdkfj a;sdlfkj" Background="AliceBlue"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="BtnYes" Content="Yes" Margin="3,3,3,3" Padding="3,3,3,3"/>
            <Button Name="BtnNo" Content="No" Margin="3,3,3,3" Padding="3,3,3,3"/>
            <Button Name="BtnCancel" Content="Cancel" Margin="3,3,3,3" Padding="3,3,3,3"/>
        </StackPanel>
    </Grid>
</Window>
